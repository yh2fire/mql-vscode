{
    "name": "vscode-mql",
    "displayName": "MQL",
    "description": "MQL (MetaQuotes Language 4/5) language support for Visual Studio Code",
    "version": "0.0.1",
    "publisher": "yh2fire",
    "repository": {
        "type": "git",
        "url": "https://github.com/yh2fire/vscode-mql"
    },
    "engines": {
        "vscode": "^1.99.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "mql",
        "mql4",
        "mql5",
        "mq4",
        "mq5",
        "mqh",
        "MetaTrader",
        "MetaQuotes Language"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vscode-mql.compile",
                "title": "Compile",
                "category": "MQL"
            }
        ],
        "configuration": {
            "title": "MQL",
            "type": "object",
            "properties": {
                "vscode-mql.winePath": {
                    "type": "string",
                    "default": "",
                    "scope": "machine-overridable",
                    "description": "Path to the Wine executable. Only needed on Linux and MacOS."
                },
                "vscode-mql.metaEditor4Path": {
                    "type": "string",
                    "default": "",
                    "scope": "machine-overridable",
                    "description": "Path to the MetaEditor 4 executable."
                },
                "vscode-mql.metaEditor5Path": {
                    "type": "string",
                    "default": "",
                    "scope": "machine-overridable",
                    "description": "Path to the MetaEditor 5 executable."
                },
                "vscode-mql.retainCompilationLogFile": {
                    "type": "boolean",
                    "default": false,
                    "scope": "machine-overridable",
                    "description": "Retain the compilation log file after compilation."
                }
            }
        },
        "menus": {
            "commandPalette": [
                {
                    "command": "vscode-mql.compile",
                    "when": "resourceExtname == '.mqh' || resourceExtname == '.mq4' || resourceExtname == '.mq5'"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.99.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^8.28.0",
        "@typescript-eslint/parser": "^8.28.0",
        "eslint": "^9.23.0",
        "typescript": "^5.8.2",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1"
    }
}
